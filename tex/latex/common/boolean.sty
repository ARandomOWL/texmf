%% Boolean operators
\ProvidesPackage{boolean}[2017/09/03 v1.0 Provides configurable boolean operators.]
\RequirePackage{amssymb}

% https://tex.stackexchange.com/a/22134/132551
\newcommand*{\xoverline}[1]{\mkern 1.5mu\overline{\mkern-1.5mu#1\mkern-1.5mu}\mkern 1.5mu}

\DeclareOption{eng}{
  \DeclareRobustCommand*{\band}{\cdot}
  \DeclareRobustCommand*{\bor}{+}
  \DeclareRobustCommand*{\bxor}{\oplus}
  \DeclareRobustCommand*{\bnot}{\xoverline}
  \DeclareRobustCommand*{\bnotg}{\xoverline}
}

\DeclareOption{math}{
  \DeclareRobustCommand*{\band}{\land}
  \DeclareRobustCommand*{\bor}{\lor}
  \DeclareRobustCommand*{\bxor}{\veebar}
  \DeclareRobustCommand*{\bnot}{\neg}
  \DeclareRobustCommand*{\bnotg}[1]{\neg(#1)}
}

\DeclareOption{implicit-and}{
  \DeclareRobustCommand*{\band}{}
}

\ExecuteOptions{eng}
\ProcessOptions\relax

\endinput
