\ProvidesPackage{pgfintersection}[2017/09/03 v1.0 Show intersections on pgfplots.]
\RequirePackage{pgfplots}

\pgfplotsset{compat=1.14}
\usetikzlibrary{intersections,shapes}
\newcommand*{\ShowIntersection}[4]{%
\fill
    [name intersections={of=#1 and #2, name=i, total=\t}]
    \foreach \s in {1,...,\t}{%
	node [regular polygon,regular polygon sides=3,inner sep=1.5pt,%
    fill=black,pin={[fill=white,align=left]#3:#4}] at (i-\s) {}};
}
